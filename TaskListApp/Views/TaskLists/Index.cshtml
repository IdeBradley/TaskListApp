
@model TaskListApp.ViewModels.TaskListIndexData

@{
    ViewBag.Title = "TaskList Index";
}

<h2>TaskList Overview</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>Task List Name</th>
        <th></th>
    </tr>

    @foreach (var item in Model.TaskLists)
    {
        string selectedRow = "";
        if (item.TaskListID == ViewBag.TaskListID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.TaskListName)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.TaskListID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.TaskListID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TaskListID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TaskListID })
            </td>
        </tr>
    }
</table>
